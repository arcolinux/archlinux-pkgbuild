# Maintainer: Erik Dubois <erik.dubois@gmail.com>
pkgname=archlinux-logout-themes-git
_pkgname=archlinux-logout-themes
_destname1="/usr"
_licensedir="/usr/share/arcolinux/licenses/"
pkgver=22.11
pkgrel=07
pkgdesc="archlinux logout themes"
arch=('any')
url="https://github.com/arcolinux/${_pkgname}"
license=('GPL3')
makedepends=('git')
options=(!strip !emptydirs)
replaces=('arcolinux-logout-themes-git')
#source=("${url}/archive/${pkgver}-${pkgrel}.tar.gz")
source=("${_pkgname}::git+https://github.com/arcolinux/archlinux-logout-themes")
sha256sums=('SKIP')
package() {
	install -dm755 ${pkgdir}${_licensedir}${_pkgname}
	install -m644  ${srcdir}/${_pkgname}/LICENSE ${pkgdir}${_licensedir}${_pkgname}

	cp -r ${srcdir}/${_pkgname}/${_destname1} ${pkgdir}
}
